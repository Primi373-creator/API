<script type="text/javascript">
  async function verify() {
      const username = document.getElementById('name').value.trim();
      if (username.length > 0) {
          try {
              const { data } = await axios(`https://api.github.com/users/${username}`);
              try {
                  await axios(`https://api.github.com/repos/${username}/alpha-md`);
              } catch (e) {
                  const Toast = Swal.mixin({
                      toast: true,
                      position: 'top-end',
                      showConfirmButton: false,
                      timer: 3000,
                      timerProgressBar: true,
                      didOpen: (toast) => {
                          toast.addEventListener('mouseenter', Swal.stopTimer);
                          toast.addEventListener('mouseleave', Swal.resumeTimer);
                      }
                  });
                  Toast.fire({
                      icon: 'error',
                      title: "Fork The Repository First.\nRedirecting...",
                  });
                  window.location.href = `https://github.com/C-iph3r/alpha-md/fork`;
                  return;
              }
              window.location.href = `https://dashboard.heroku.com/new?template=https://github.com/${username}/alpha-md&template=https://github.com/${username}/alpha-md.git`;
          } catch (error) {
              const Toast = Swal.mixin({
                  toast: true,
                  position: 'top-end',
                  showConfirmButton: false,
                  timer: 3000,
                  timerProgressBar: true,
                  didOpen: (toast) => {
                      toast.addEventListener('mouseenter', Swal.stopTimer);
                      toast.addEventListener('mouseleave', Swal.resumeTimer);
                  }
              });
              Toast.fire({
                  icon: 'error',
                  title: 'Invalid Username',
              });
          }
      } else {
          const Toast = Swal.mixin({
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true,
              didOpen: (toast) => {
                  toast.addEventListener('mouseenter', Swal.stopTimer);
                  toast.addEventListener('mouseleave', Swal.resumeTimer);
              }
          });
          Toast.fire({
              icon: 'error',
              title: 'Please enter a GitHub username.',
          });
      }
  }
  document.getElementById('submit').addEventListener('click', verify);
</script>

